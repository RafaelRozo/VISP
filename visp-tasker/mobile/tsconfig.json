{
  "extends": "@react-native/typescript-config/tsconfig.json",
  "compilerOptions": {
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "skipLibCheck": true
  },
  "include": ["src/**/*", "index.js", "App.tsx", "__tests__/**/*"],
  "exclude": ["node_modules", "babel.config.js", "metro.config.js", "jest.config.js", "ios", "android"]
}
